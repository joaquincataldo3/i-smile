                                    </div>
                                    <div class="radio-label-container">
    
                                        <label for="email_notifications_false">NO</label>
                                        <input id="email_notifications_false" type="radio" name="email_notifications"
                                            value="0" <%=user.email_notifications==0? 'checked' : '' %>>
