                                    <div class="radio-label-container">
    
                                        <label for="email_newsletter_false">NO</label>
                                        <input id="email_newsletter_false" type="radio" name="email_newsletter" value="0"
                                            <%=user.email_newsletter==0? 'checked' : '' %>>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    


                    <div class="edit-content-container">
                        <button class="form-btn edit-content">
                            Editar datos
                        </button>
                        <button type="submit" class="form-btn submit-form form-btn-inactive">
